/**index.wxss**/
.container {
  width: 100%;
  /* height: 1000rpx; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 0;
  background-color: #dddddd;
}

#head {
  width: 100%;
  height: 300rpx;
  background-color: red;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-content: center;
  margin: 0;
  padding: 0;
}
.bg-img {
  display: block;
  width: 750rpx;
  height: 300rpx;
}
.person-img {
  display: block;
  width: 300rpx;
  height: 300rpx;
  position: absolute;
  margin-left: 50rpx;
}
.tel-img {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 100rpx;
  top: 200rpx;
}
#content {
  width: 100%;
  height: 1000rpx;
  background-color: #000;
}
.content-head-img {
  display: block;
  width: 750rpx;
  height: 100rpx;
}
.content-list {
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
  justify-items: flex-start;
  padding: 40rpx;
}
text {
  color: #fff;
  margin: 20rpx 20rpx;
}
.textH1 {
  color: aqua;
  font-size: 18px;
  margin: 27rpx 0 25rpx -10rpx;
}
swiper,
swiper-item,
.sheet {
  height: 100%;
  width: 100%;
}
